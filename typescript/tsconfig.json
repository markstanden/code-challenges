{
  "compilerOptions": {
    "outDir": "other/build",
    "rootDir": "other",
    "target": "ES2018",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "./other/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
}